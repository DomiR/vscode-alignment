{
    "name": "alignment",
    "displayName": "Alignment",
    "description": "Align code like in Sublime Text 3 Alignment Package",
    "version": "0.0.1",
    "publisher": "annsk",
    "engines": {
        "vscode": "^1.5.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:alignment.align"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [{
            "command": "alignment.align",
            "title": "Align selection"
        }],
        "configuration": {
            "type": "object",
            "title": "Align extension configuration",
            "properties": {
                "alignment.chars": {
                    "type": "object",
                    "default": {
                        ":":{
                            "spaceBefore": 0,
                            "spaceAfter": 1
                        },
                        "=": {
                            "spaceBefore": 1,
                            "spaceAfter": 1
                        }
                    },
                    "description": "Chars to align",
                    "additionalProperties": {
                        "type": "object",
                        "properties": {
                            "spaceBefore": {
                                "type": "number",
                                "default": 0
                            },
                            "spaceAfter": {
                                "type": "number",
                                "default": 1
                            }
                        },
                        "additionalProperties": false
                    }
                }
            }
        },
        "keybindings": [{
            "command": "alignment.align",
            "key": "alt+=",
            "mac": "alt+=",
            "linux": "alt+=",
            "when": "editorTextFocus"
        }]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    },
    "license": "SEE LICENSE IN LICENSE.md",
	"bugs": {
		"url": "https://github.com/annsk/vscode-alignment/issues"
	},
	"homepage": "https://github.com/annsk/vscode-alignment/blob/master/README.md",
	"repository": {
		"type": "git",
		"url": "https://github.com/annsk/vscode-alignment.git"
	},
    "icon": "docs/icon.png"
}